<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"
>
   <Dialog id="idAddIngreDialog" title="{i18n>ingreToStore}" draggable="true" resizable="true">
      <content>
        <List items="{ingreToStore>/}"
		      mode="MultiSelect">
            <items>
                <StandardListItem title="{ingreToStore>name}" 
                />
            </items>
        </List>
      </content>
      <beginButton>
         <Button text="Close" press=".onCloseAddIngreDialog"/>
      </beginButton>
    </Dialog>   
</core:FragmentDefinition>