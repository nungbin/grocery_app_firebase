<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"
>
   <Dialog id="idAddIngreDialog" title="{image>/ingredient}" draggable="true" resizable="true">
      <content>
        <List noDataText="Drop list items here" id="list0">
            <items>
                <StandardListItem type="Navigation" 
                                  title="List Item 1" 
                                  description="Description text" 
                                  icon="sap-icon://picture" 
                />
            </items>
        </List>
      </content>
      <beginButton>
         <Button text="Close" press=".onCloseAddIngreDialog"/>
      </beginButton>
    </Dialog>   
</core:FragmentDefinition>