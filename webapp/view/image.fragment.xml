<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog id="idImageDialog" 
           title="{image>/ingredient}" 
           draggable="true"
           resizable="true">
      <content>
        <Image src="{image>/imageURL}" 
               width="100%" 
               height="100%" 
               id="idImageURL"/>
      </content>
      <beginButton>
         <Button text="Close" press=".onCloseImageDialog"></Button>
      </beginButton>
    </Dialog>   
</core:FragmentDefinition>
